<UserControl x:Class="Palanteer.Desktop.ChatControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Palanteer.Desktop"
             xmlns:t="clr-namespace:Simple.Wpf.Terminal;assembly=Simple.Wpf.Terminal"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel>
        <TextBlock Text="Chat:" />
        <t:Terminal x:Name="_terminal" Width="200" Height="400" IsReadOnly="True"
                            ItemsSource="{Binding Path=Lines}" ItemDisplayPath="Text" />
        <TextBox Text="{Binding Path=Prompt, UpdateSourceTrigger=PropertyChanged}" KeyDown="ChatOnKeyDown" />

    </StackPanel>
</UserControl>
